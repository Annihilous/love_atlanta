.container
  %p#notice= notice
  %h1 Listing Volunteers
  %table
    %thead
      %tr
        %th Name
        %th Email
        %th{:colspan => "3"}
    %tbody
      - @volunteers.each do |volunteer|
        %tr
          %td= volunteer.name
          %td= volunteer.email
          %td= link_to 'Show', volunteer
          %td= link_to 'Edit', edit_volunteer_path(volunteer)
          %td= link_to 'Destroy', volunteer, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New Volunteer', new_volunteer_path, class: "btn btn-primary"
