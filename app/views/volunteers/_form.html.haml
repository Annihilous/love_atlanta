= form_for(@volunteer) do |f|
  - if @volunteer.errors.any?
    #error_explanation
      %h2
        = pluralize(@volunteer.errors.count, "error")
        prohibited this volunteer from being saved:
      %ul
        - @volunteer.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .actions
    = f.submit
